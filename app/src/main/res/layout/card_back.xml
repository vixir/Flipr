<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rectangle"
        android:tint="@color/cardBack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pic_info_description_margin"
            android:padding="@dimen/pic_info_description_margin"
            android:text="@string/pic_meta_data"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/description_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pic_info_description_margin"
            android:padding="@dimen/pic_info_description_margin"
            android:text="@string/desc_meta_data"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dimen_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/pic_info_description_margin"
            android:text="@string/dimen_meta_data"
            android:textSize="12sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>
